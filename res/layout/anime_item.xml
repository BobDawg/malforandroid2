<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:padding="@dimen/list_item_padding" >

    <ImageView
        android:id="@+id/thumb_image"
        android:layout_width="@dimen/list_item_thumb_width"
        android:layout_height="@dimen/list_item_thumb_height"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/thumb_image"
        android:layout_toRightOf="@+id/thumb_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/large_text" />

    <TextView
        android:id="@+id/suplimentary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumb_image"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="1"
        android:textSize="@dimen/medium_text" />

</RelativeLayout>