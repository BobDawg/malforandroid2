<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.github.riotopsys.malforandroid2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark_blue" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/standard_padding"
        android:background="@drawable/rounded_item"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/title" >

        <com.github.riotopsys.pannellayout.PannelLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/standard_padding"
            android:paddingLeft="@dimen/standard_padding"
            app:columns="6"
            app:divider_size="@dimen/standard_padding" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_columnSpan="1"
                app:layout_rowSpan="4"
                android:background="@drawable/rounded_item" >

                <ImageView
                    android:id="@+id/cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter" />

                <ProgressBar
                    android:id="@+id/cover_progress_bar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/detail_item"
                app:layout_columnSpan="3"
                app:layout_rowSpan="4" >

                <ScrollView
                    android:id="@+id/synopsis_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/synopsis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </ScrollView>

                <ProgressBar
                    android:id="@+id/synopsis_progress_bar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/chapter_panel"
                style="@style/detail_item"
                app:layout_columnSpan="1"
                android:gravity="center"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/chapter_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="@string/chapters"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_one_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/plus_one" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/volume_panel"
                style="@style/detail_item"
                app:layout_columnSpan="1"
                android:gravity="center"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/volume_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="@string/volumes"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_one_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/plus_one" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/status_panel"
                style="@style/detail_item"
                app:layout_columnSpan="1"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="@string/status"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/manga_read_status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_dropdown_item" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/score_panel"
                style="@style/detail_item"
                app:layout_columnSpan="1"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="@string/your_score"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/manga_score_status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_dropdown_item" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_panel"
                style="@style/detail_item"
                app:layout_columnSpan="5"
                android:gravity="center"
                android:visibility="gone"
                android:weightSum="5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="@string/add_as"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/manga_watched_status_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_dropdown_item" />

                <Button
                    android:id="@+id/add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="@string/add" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/information_container"
                style="@style/detail_item"
                app:layout_columnSpan="1"
                app:layout_rowSpan="2"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="@dimen/standard_padding"
                    android:text="@string/information"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="@dimen/standard_padding" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="@dimen/standard_padding" />

                <TextView
                    android:id="@+id/classification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="@dimen/standard_padding" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/statistics_container"
                style="@style/detail_item"
                app:layout_columnSpan="1"
                app:layout_rowSpan="2"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="@dimen/standard_padding"
                    android:text="@string/statistics"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="@dimen/standard_padding" />

                <TextView
                    android:id="@+id/popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="@dimen/standard_padding" />

                <TextView
                    android:id="@+id/member_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="@dimen/standard_padding" />

                <TextView
                    android:id="@+id/member_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="@dimen/standard_padding" />

                <TextView
                    android:id="@+id/favorited_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginBottom="@dimen/standard_padding" />
            </LinearLayout>

            <TextView
                android:id="@+id/spin_offs"
                style="@style/detail_item"
                app:layout_columnSpan="1"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/alternative_versions"
                style="@style/detail_item"
                app:layout_columnSpan="1"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone" />
        </com.github.riotopsys.pannellayout.PannelLayout>
    </ScrollView>

</RelativeLayout>