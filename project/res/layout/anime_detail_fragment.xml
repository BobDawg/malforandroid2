<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.github.riotopsys.malforandroid2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/title" >

        <com.github.riotopsys.pannellayout.PannelLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="4dp"
            app:columns="6"
            app:divider_size="4dp" >

            <ImageView
                android:id="@+id/cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:scaleType="centerCrop"
                android:src="@drawable/icon"
                app:column_span="1"
                app:row_span="4" />

            <ScrollView
                style="@style/detail_item"
                android:id="@+id/synopsis_container"
                app:column_span="3"
                app:row_span="4" >

                <TextView
                    android:id="@+id/synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ipsum" />
            </ScrollView>

            <LinearLayout
                android:id="@+id/watched_pannel"
                style="@style/detail_item"
                android:gravity="center"
                app:column_span="1" >

                <TextView
                    android:id="@+id/watched_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="Watched:"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/plus_one" />
            </LinearLayout>

            <LinearLayout
                style="@style/detail_item"
                app:column_span="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="Status:"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/anime_watched_status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_dropdown_item" />
            </LinearLayout>

            <LinearLayout
                style="@style/detail_item"
                app:column_span="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="Your Score:"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/anime_score_status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_dropdown_item" />
            </LinearLayout>
            
            <TextView
                android:id="@+id/prequel"
                style="@style/detail_item"
                android:text="Prequel"
                android:textStyle="bold"
                app:column_span="1" 
                android:gravity="center"
                android:visibility="gone"
                />
            
            <TextView
                android:id="@+id/sequel"
                style="@style/detail_item"
                android:text="sequels"
                android:textStyle="bold"
                app:column_span="1" 
                android:gravity="center"
                android:visibility="gone"
                />
            
            <TextView
                android:id="@+id/side_story"
                style="@style/detail_item"
                android:text="side_story"
                android:textStyle="bold"
                app:column_span="1" 
                android:gravity="center"
                android:visibility="gone"
                />
<!-- test block -->

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#666"
                app:column_span="5"
                app:row_span="6" />
        </com.github.riotopsys.pannellayout.PannelLayout>
    </ScrollView>

</RelativeLayout>